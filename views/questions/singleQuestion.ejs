<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Question List</title>
  <style>
    /* === Global === */
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 30px;
      background: linear-gradient(135deg,#f0f4ff,#f9fafc);
      color: #333;
    }
    h1 {
      text-align: center;
      color: #4f46e5;
      margin-bottom: 30px;
    }

    /* === Container === */
    .card-container {
      max-width: 1000px;
      margin: auto;
      display: flex;
      flex-direction: column;
      gap: 25px;
    }

    /* === Card === */
    .card {
      background: #fff;
      border-radius: 18px;
      padding: 25px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.07);
      transition: all 0.3s ease;
    }
    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.12);
    }
    .card h2 {
      font-size: 24px;
      margin-bottom: 10px;
      color: #222;
    }
    .card p {
      font-size: 16px;
      color: #555;
      margin-bottom: 15px;
      line-height: 1.6;
    }
    .card img {
      max-width: 100%;
      height: auto;
      border-radius: 12px;
      margin-bottom: 15px;
    }
    .card i {
      display: block;
      font-size: 14px;
      color: #888;
      margin-top: 5px;
    }

    /* === Answer List === */
    .answers-section {
      background: #fefefe;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }
    .answers-section h3 {
      font-size: 20px;
      color: #4f46e5;
      margin-bottom: 15px;
    }
    .answer-card {
      background: #f9faff;
      border-left: 4px solid #4f46e5;
      padding: 15px 20px;
      border-radius: 10px;
      margin-bottom: 12px;
    }
    .answer-card p {
      margin-bottom: 5px;
      font-size: 15px;
      color: #444;
    }
    .answer-card i {
      font-size: 13px;
      color: #777;
    }

    /* === Like button === */
    .like-btn {
      display: inline-block;
      padding: 6px 12px;
      background: #e0e7ff;
      color: #4f46e5;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      cursor: pointer;
      margin-top: 8px;
      transition: all 0.2s ease;
    }
    .like-btn:hover {
      background: #c7d2fe;
    }

    /* === Answer form === */
    .answersection {
      background: #fff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.06);
    }
    .answersection h3 {
      font-size: 20px;
      color: #4f46e5;
      margin-bottom: 15px;
    }
    .answersection form {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    textarea {
      resize: none;
      padding: 12px;
      border-radius: 10px;
      border: 1px solid #ccc;
      font-size: 15px;
      font-family: inherit;
      outline: none;
      transition: border 0.3s;
    }
    textarea:focus {
      border-color: #4f46e5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
    }
    button {
      align-self: flex-start;
      padding: 12px 20px;
      background: linear-gradient(135deg,#4f46e5,#6366f1);
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.3s;
    }
    button:hover {
      background: linear-gradient(135deg,#4338ca,#4f46e5);
      transform: scale(1.04);
      box-shadow: 0 4px 12px rgba(79,70,229,0.3);
    }
  </style>
  <%- include("../components/navbar.ejs")  %>
</head>
<body>
  <h1>Questions & Answers</h1>
  <div class="card-container">

    <!-- Question Card -->
    <div class="card">
      <h2><%- data[0].title %></h2>
      <p><%- data[0].description %></p>
      <img src="http://localhost:3000/<%- data[0].image %>" alt="question image" />
      <i>Author : <%- data[0].user.username %></i>
      <i>Posted on: <%- new Date(data[0].createdAt).toLocaleDateString() %></i>
    </div>

    <!-- Answers Section -->
    <div class="answers-section">
      <h3>Answers:</h3>
      <% answers.forEach((answer) => { %>
        <div class="answer-card">
          <p><%- answer.answerText %></p>
          <i>Author : <%- answer.user.username %></i><br>
          <i>Posted on: <%- new Date(answer.createdAt).toLocaleDateString() %></i><br>
          <button class="like-btn" onclick="likePost(<%- answer.id %>)">üëç Like</button>
          <span id="likes_<%- answer.id %>"><%- answer.likes %></span>
        </div>
      <% }) %>
    </div>

    <!-- Answer Form -->
    <div class="answersection">
      <h3>Write your Answer</h3>
      <form action="/answer/<%- data[0].id %>" method="post">
        <textarea name="answer" cols="90" rows="6" placeholder="Write your answer here..."></textarea>
        <button type="submit">Submit Answer</button>
      </form>
    </div>

  </div>

  <!-- client socket -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const cookie = document.cookie.split('=');
    function likePost(answerId) {
      socket.emit('like',{
        answerId,
        cookie: cookie[1]
      });
    }
    socket.on('likeUpdate',({likesCount,answerId}) =>{
      const likes = document.getElementById(`likes_${answerId}`);
      likes.textContent = likesCount;
    });
  </script>
</body>
</html>
