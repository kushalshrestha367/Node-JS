<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Form with Navbar</title>
    <link rel="stylesheet" href="login.css">
       
</head>
<body>

    <!-- Navbar -->
   <!-- include(import or require) function -->
    <%- include("../components/navbar.ejs")  %>

    <!-- Form -->
    <div class="form-container">
        <h2>Forget Password</h2>
        <!-- auth controller bata aako email ra Password -->
   <form action="/resetPassword/<%- email %>/<%-otp%>" method="post">
            <input type="text" name="newPassword" placeholder="Enter new Password" required>
            <input type="text" name="confirmPassword" placeholder="Enter confirm Password" required>
            <!-- <input type="submit" value="Reset"> -->
             <button type="submit">Reset</button>
        </form>
    </div>

</body>
</html>
